[
    // --- 全局命令
    // ----------------- 打开 ------------------//
    // 打开一个目录 open directory
    {
        "key": "ctrl+o d",
        "command": "workbench.action.files.openFolder"
    },
    // 打开一个文件 open file
    {
        "key": "ctrl+o f",
        "command": "workbench.action.files.openFile"
    },
    //打开工作区 open workbench
    {
        "key": "ctrl+o w",
        "command": "workbench.action.openWorkspace"
    },
    {
        "key": "ctrl+o p",
        "command": "markdown-preview-enhanced.openPreviewToTheSide"
    },
    {
        "key": "ctrl+a",
        "command": "editor.action.selectAll",
        "when": "vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualLine' && vim.mode != 'VisualBlock' && vim.mode != 'CommandlineInProgress'"
    },
    {
        "key": "ctrl+z",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    // ----------------- 窗口 ------------------//
    // 打开设置页面 window setting
    // 在文件资源管理器中打开 window (Files)explorer
    {
        "key": "ctrl+w e",
        "command": "revealFileInOS",
        "when": "vim.mode == 'Normal'"
    },
    //在文件视图中聚焦文件
    {
        "key": "ctrl+w f",
        "command": "workbench.files.action.showActiveFileInExplorer",
        "when": "vim.mode == 'Normal'"
    },
    // 打开最近记录 window history
    {
        "key": "ctrl+w h",
        "command": "workbench.action.openRecent",
        "when": "vim.mode == 'Normal'"
    },
    // 关闭vscode实例 window quit
    {
        "key": "ctrl+w q",
        "command": "workbench.action.closeWindow",
        "when": "vim.mode == 'Normal'"
    },
    // 显示debug window bug
    {
        "key": "ctrl+w d",
        "command": "workbench.view.debug",
        "when": "vim.mode == 'Normal' && viewContainer.workbench.view.debug.enabled"
    },
    // 切换侧边栏显示状态
    {
        "key": "ctrl+w [",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "vim.mode == 'Normal'"
    },
    // 底栏显示状态 window panel
    {
        "key": "ctrl+w p",
        "command": "workbench.action.togglePanel",
        "when": "vim.mode == 'Normal'"
    },
    //下翻页
    {
        "key": "ctrl+d",
        "command": "extension.vim_ctrl+d",
        "when": "editorTextFocus && vim.active && vim.use<C-d> && !inDebugRepl"
    },
    {
        "key": "ctrl+shift+s",
        "command": "workbench.action.openSettings"
    },
    {
        "key": "e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "p",
        "command": "filesExplorer.paste",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "y",
        "command": "filesExplorer.copy",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "x",
        "command": "filesExplorer.cut",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "d",
        "command": "moveFileToTrash",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
    },
    // ------------- Alt ----------------//
    //侧边栏
    {
        "key": "alt+[",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "alt+d",
        "command": "editor.action.peekDefinition"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight"
    },
    ////////////////////////////////////
    // VIM LIKE KEY BIND
    ////////////////////////////////////
    {
        "key": "ctrl+w v",
        "command": "workbench.action.splitEditor",
        "when": "vim.mode == 'Normal' && workbench.scm.active"
    },
    {
        "key": "ctrl+w s",
        "command": "workbench.action.splitEditorDown",
        "when": "vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+w c",
        "command": "workbench.action.closeActiveEditor"
    },
    // navigation
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "shift+h",
        "command": "workbench.action.previousEditor",
        "when": "editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "shift+l",
        "command": "workbench.action.nextEditor",
        "when": "editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "g g",
        "command": "-list.focusFirst",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "home",
        "command": "-list.focusFirst",
        "when": "listFocus && !inputFocus && !treestickyScrollFocused"
    },
]
