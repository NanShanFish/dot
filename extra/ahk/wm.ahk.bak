Activate(t)
{
  IfWinActive ahk_exe %t%
  {
    WinMinimize
    return
  }
  IfWinExist ahk_exe %t%
  {
    WinShow
    WinActivate
    return 1
  }
  return 0
}

ActivateAndOpen(t,p)
{
  if Activate(t)==0
  {
    Run %p%
    WinActivate
    return
  }
}

